<%= form_for @widget do |form| %>
  <%= form.label 'name' %>
  <%= form.text_field 'name' %>
  <br>

  <%= form.label :page_id %>
  <%= form.number_field :page_id %>
  <br>

  <%= form.label :rank %>
  <%= form.number_field :rank %>
  <br>


  <%= form.fields_for :fields do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <br>

    <%= f.label :label %>
    <%= f.text_field :label %>

    <%= f.label :content_type %>
    <%= f.text_field :content_type %>
    <br>

    <%= f.label :tag %>
    <%= f.text_field :tag %>
    <br>

    <%= f.label :image %>
    <%= f.file_field :image %>

  <% end %>

  <%= form.submit %>
<% end %>