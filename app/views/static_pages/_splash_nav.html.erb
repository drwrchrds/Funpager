<div role="navigation" class="navbar-default navbar-splash navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a href="/splash" class="navbar-brand">Funpager</a>
    </div>

    <div class="navbar-inner">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= button_to "Start Building", '#/pages/new',
               class:'btn navbar-btn btn-primary', method: :get%>

          <li class="divider"><%# link_to "Dashboard", '#/' %>
          <li class='dropdown'>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-user"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Your Pages", '#/' %>
              <li><%= link_to "Your Profile", '#profile' %>
              <li class="divider"></li>
              <li><%= link_to "Sign Out", session_url, method: :delete %>
            </ul>
        <% else %>
            <li><%= button_to "Start Building", '#/pages/new',
                   class:'btn navbar-btn btn-primary', method: :get, disabled: true  %>
            <li><%= button_to "Sign Up", new_user_url,
                  class: 'btn navbar-btn btn-clear', method: :get %>
            <li><%= button_to "Sign In", new_session_url,
                  class: 'btn navbar-btn btn-clear', method: :get %>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="container padded-flash-container">
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <div class="alert alert-warning">
          <%= error %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>