<%= render 'static_pages/splash_nav' %>
</div>

<div class="row">
  <section class="splash_auth">
    <div class="container">
      <h1>Sign In</h1>
    </div>
  </section>

  <section class="splash_auth_form">
    <div class="container">
      <form class='form' action="<%= session_url %>" method="POST">
        <input type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

        <div class='form-group'>
          <label>Username:
            <input class='form-control' type="text"
              name="user[username]" value="<%= @user.username %>">
          </label>
        </div>

        <div class='form-group'>
          <label>Password:
            <input class='form-control'
              type="password" name="user[password]">
          </label>
        </div>

        <button class='btn btn-primary'>Sign In</button>
      </form>
    </div>
  </section>
</div>