<div class='widget-fields'>
  <span class="click-to-edit">Click to edit</span>

  <% widget.fields().sort().each(function(field) { %>
    <% if(field.get('content') !== '') { %> <!-- ignore if no content -->
      <% if(field.escape('tag') === 'a') { %>
        <% if(field.escape('label') === 'Email:') { %>
          <<%= field.escape('tag')%> href='mailto:<%= field.escape('content') %>' target="_blank"><%= field.escape('content') %></<%= field.escape('tag')%>>
        <% } else { %>
          <<%= field.escape('tag')%> href='<%= field.escape('content') %>' target="_blank"><%= field.escape('content') %></<%= field.escape('tag')%>>
        <% } %>
      <% } else { %>
        <<%= field.escape('tag')%>><%= field.escape('content') %></<%= field.escape('tag')%>>
      <% } %>
    <% } %>
  <% }) %>
</div>
